{
  "name": "vega-lite-dev-config",
  "version": "0.5.0",
  "description": "Version-controlled build config for easy re-use and sharing",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vega/vega-lite-dev-config.git"
  },
  "author": "Kanit \"Ham\" Wongsuphasawat, Dominik Moritz",
  "collaborators": [
    "Kanit Wongsuphasawat <kanitw@gmail.com> (http://kanitw.yellowpigz.com)",
    "Dominik Moritz <domoritz@cs.washington.edu> (https://www.domoritz.de)"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/vega/vega-lite-dev-config/issues"
  },
  "homepage": "https://github.com/vega/vega-lite-dev-config#readme",
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@beemo/cli": "^1.0.10",
    "@beemo/core": "^1.1.6",
    "@beemo/driver-babel": "^1.2.3",
    "@beemo/driver-eslint": "^1.2.2",
    "@beemo/driver-jest": "^1.2.1",
    "@beemo/driver-prettier": "^1.3.0",
    "@beemo/driver-typescript": "^1.3.2",
    "@types/jest": "^25.1.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^25.1.0",
    "prettier": "^2.0.1",
    "ts-jest": "^25.2.1"
  },
  "devDependencies": {
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^3"
  },
  "beemo": {
    "module": "@local",
    "drivers": [
      "prettier"
    ]
  },
  "scripts": {
    "prepare": "beemo create-config --silent",
    "lint": "beemo prettier --check \"./configs/**/*.js\"",
    "format": "beemo prettier --write \"./configs/**/*.js\""
  }
}
