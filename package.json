{
  "name": "vega-lite-dev-config",
  "version": "0.2.5",
  "description": "Version-controlled build config for easy re-use and sharing",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vega/vega-lite-dev-config.git"
  },
  "author": "Kanit \"Ham\" Wongsuphasawat, Dominik Moritz",
  "collaborators": [
    "Kanit Wongsuphasawat <kanitw@gmail.com> (http://kanitw.yellowpigz.com)",
    "Dominik Moritz <domoritz@cs.washington.edu> (https://www.domoritz.de)"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/vega/vega-lite-dev-config/issues"
  },
  "homepage": "https://github.com/vega/vega-lite-dev-config#readme",
  "dependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@beemo/cli": "^1.0.4",
    "@beemo/core": "^1.0.6",
    "@beemo/driver-babel": "^1.0.4",
    "@beemo/driver-eslint": "^1.0.6",
    "@beemo/driver-jest": "^1.0.3",
    "@beemo/driver-prettier": "^1.0.3",
    "@beemo/driver-typescript": "^1.1.3",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.15.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0"
  },
  "devDependencies": {
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^3"
  },
  "beemo": {
    "module": "@local",
    "drivers": [
      "prettier"
    ]
  },
  "scripts": {
    "prepare": "beemo create-config --silent",
    "lint": "beemo prettier --check \"./configs/**/*.js\"",
    "format": "beemo prettier --write \"./configs/**/*.js\""
  }
}
